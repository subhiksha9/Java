import java.util.*;
class Arraysize
{
	int arraylength;
	void arrayLength()
	{
		arraylength=n;
		if(n<0)
		{
			throw new Exception("Negative Array Size Exception");
		}
		else
		{
			System.out.println("The array size is : "+n);
		}
	}
}
class Demo
{
public static void main(String args[])
{
	Scanner sc=new Scanner(System.in);
	System.out.println("Enter the array length: ");
	int n=sc.nextInt();
	int [] arr=new int[n];
	try
	{
		Arraysize s=new Arraysize();
		s.arrayLength();
	}
	catch(Exception e)
	{
		System.out.println(e);
	}
}
}		
